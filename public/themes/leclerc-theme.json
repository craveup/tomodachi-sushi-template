{
  "name": "Leclerc Bakery",
  "version": "1.0.0",
  "clientId": "leclerc-bakery-nyc",
  "description": "Warm, artisanal bakery theme with golden browns and cream tones",
  "category": "bakery",
  "colors": {
    "brand": {
      "primary": "25 45% 55%",
      "secondary": "30 67% 94%", 
      "accent": "25 76% 31%"
    },
    "restaurant": {
      "warmth": "25 45% 55%",
      "fresh": "142 76% 36%",
      "premium": "25 76% 31%"
    },
    "components": {
      "menuCard": {
        "background": "0 0% 100%",
        "border": "25 15% 90%",
        "hover": "30 67% 97%"
      },
      "cart": {
        "background": "30 67% 97%",
        "border": "25 45% 55%",
        "highlight": "25 85% 90%"
      },
      "status": {
        "success": "142 71% 45%",
        "error": "0 84% 60%",
        "warning": "45 93% 47%",
        "info": "200 18% 46%"
      }
    },
    "darkMode": {
      "brand": {
        "primary": "25 35% 45%",
        "secondary": "25 8% 15%",
        "accent": "30 60% 70%"
      },
      "components": {
        "menuCard": {
          "background": "25 6% 12%",
          "border": "25 8% 20%",
          "hover": "25 8% 18%"
        },
        "cart": {
          "background": "25 8% 15%",
          "border": "25 35% 45%"
        }
      }
    }
  },
  "typography": {
    "fonts": {
      "primary": {
        "family": "Inter",
        "fallback": "sans-serif",
        "weights": [400, 500, 600, 700]
      },
      "accent": {
        "family": "Playfair Display", 
        "fallback": "serif",
        "weights": [400, 600, 700]
      },
      "menu": {
        "family": "Source Sans Pro",
        "fallback": "sans-serif", 
        "weights": [400, 600]
      }
    },
    "scale": {
      "xs": "0.75rem",
      "sm": "0.875rem", 
      "base": "1rem",
      "lg": "1.125rem",
      "xl": "1.25rem",
      "2xl": "1.5rem",
      "3xl": "1.875rem"
    }
  },
  "spacing": {
    "borderRadius": {
      "sm": "0.5rem",
      "base": "0.75rem", 
      "lg": "1rem",
      "xl": "1.5rem"
    },
    "shadows": {
      "menuCard": "0 4px 6px -1px rgb(0 0 0 / 0.1), 0 2px 4px -1px rgb(0 0 0 / 0.06)",
      "cart": "0 10px 15px -3px rgb(0 0 0 / 0.1), 0 4px 6px -2px rgb(0 0 0 / 0.05)",
      "modal": "0 25px 50px -12px rgb(0 0 0 / 0.25)"
    }
  },
  "components": {
    "header": {
      "height": "4rem",
      "background": "menuCard.background",
      "border": "menuCard.border",
      "backdropBlur": true
    },
    "menuCard": {
      "borderRadius": "base",
      "shadow": "menuCard",
      "hoverTransform": "translateY(-1px)",
      "transition": "all 0.2s ease"
    },
    "button": {
      "primary": {
        "background": "brand.primary",
        "color": "brand.secondary",
        "hoverBackground": "brand.primary / 0.9",
        "borderRadius": "sm"
      },
      "secondary": {
        "background": "transparent",
        "color": "brand.primary", 
        "border": "brand.primary",
        "hoverBackground": "brand.primary / 0.1"
      }
    },
    "cart": {
      "background": "cart.background",
      "border": "cart.border / 0.2",
      "shadow": "modal",
      "borderRadius": "lg"
    }
  },
  "animations": {
    "duration": {
      "fast": "150ms",
      "normal": "200ms", 
      "slow": "300ms"
    },
    "easing": {
      "default": "cubic-bezier(0.4, 0, 0.2, 1)",
      "in": "cubic-bezier(0.4, 0, 1, 1)",
      "out": "cubic-bezier(0, 0, 0.2, 1)"
    },
    "effects": {
      "menuCardHover": {
        "transform": "translateY(-1px)",
        "shadow": "cart",
        "duration": "normal"
      },
      "buttonHover": {
        "transform": "translateY(-1px)",
        "duration": "fast"
      }
    }
  },
  "accessibility": {
    "respectMotionPreference": true,
    "contrastMode": {
      "enabled": true,
      "adjustments": {
        "brand.primary": "25 60% 30%",
        "brand.secondary": "25 80% 95%"
      }
    }
  },
  "customProperties": {
    "specialEffects": {
      "menuCardGradient": "linear-gradient(145deg, var(--menu-card-bg), var(--restaurant-warmth-5))",
      "buttonGradient": "linear-gradient(135deg, var(--brand-primary), var(--brand-accent))"
    },
    "branding": {
      "logoFilter": "none",
      "brandPattern": "url('/patterns/bakery-texture.svg')"
    }
  },
  "responsive": {
    "mobile": {
      "borderRadius": {
        "base": "0.5rem",
        "lg": "0.75rem"
      }
    },
    "tablet": {
      "spacing": {
        "multiplier": 1.2
      }
    }
  },
  "clientSpecific": {
    "businessType": "artisanal bakery",
    "atmosphere": "warm and cozy",
    "targetAudience": "families and coffee lovers",
    "brandPersonality": ["artisanal", "warm", "traditional", "quality"],
    "seasonalAdjustments": {
      "winter": {
        "colors": {
          "brand.primary": "25 50% 45%"
        }
      },
      "spring": {
        "colors": {
          "restaurant.fresh": "142 80% 40%"
        }
      }
    }
  }
}